<div id="clearance" class="sign-up">

<div class="container col-sm-10 col-md-5">
  


  <div class="card border-light">
    
    <div class="card-header">
      <h2><%= t(".title") %></h2>
    </div>

    <div class="card-body">
      <%= form_with model: @user, local: true do |form| %>
        <%= render partial: '/users/form', object: form %>

        <div class="submit-field container col-sm-12">
          <%= form.submit "Sign up for a new account", :class => "btn btn-primary col-12" %>
        </div>
      <% end %>

        
    </div> <!-- End of card body -->
    <div class="card-body">
        <div class="other-links container col-sm-12">
          <p>I already have an account</p>
          <%= link_to t(".sign_in"), sign_in_path, :class => "btn btn-info col-12" %>
          <%= link_to 'Sign in with Google', "/auth/google_oauth2", { :class => "btn btn-danger col-12" }  %>
        </div>
    </div> <!-- End of card body -->

  </div> <!-- End of card div -->

</div> <!-- End of container div -->

</div> <!-- End of clearance div -->

