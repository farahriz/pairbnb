<%if signed_in?%>
	<%= link_to "Create new listing", new_listing_path, :class => "btn btn-outline-warning p-1 col-12" %>
<%end%>

<h1>Listings#index</h1>
<p>The tags would go here</p>


<p>This is where I would list out all the possible listings</p>

<section id="listings-cards">
	<div class="row match-height w-100">
		<%@listings.each do |list|%>
			<div class="col-xl-3 col-lg-4 col-md-6 col-sm-12">
				<div class="card">
					<div class="card-content">
						<!-- An image would go here in an img tag -->
						<div class="card-body">
							<h5 class="card-title">
								<%=link_to "#{list.name}", listing_path(list) %>
							</h5>
							<p class="card-text">
								<%= "#{list.description}"%>
							</p>
						</div>
					</div>
					
				</div>
				
		</div>
		<%end%>
	</div>


</section>
